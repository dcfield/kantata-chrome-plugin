{
  "manifest_version": 3,
  "name": "Estimated-Hours Filler",
  "version": "1.0.0",
  "description": "Auto-fills Estimated hours from Scheduled hours on TaskManagerApp",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Fill Estimated Hours"
  },
  "host_permissions": [
    "https://your.taskmanager.domain/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://zinkworks.mavenlink.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}